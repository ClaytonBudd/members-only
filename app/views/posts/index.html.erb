<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>

<% @posts.each do |post| %>
  <h1><%= post.title %></h1>
  <p><%= post.body %></p>
    <% if post.user == current_user%>
      <p><%= post.user.email%></p>
    <%end%>
  <br>
  <% end %>


<%= button_to "Sign out", destroy_user_session_path, method: :delete %> 
<%= button_to "Sign in", new_user_session_path %> 
